<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sjden.betfairtest.RaceTypeActivity"
    android:id="@+id/rlRaceType"
    android:background="@color/betfair_yellow">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Harness"
        android:id="@+id/bttnHarness"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="listHarness" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Greyhounds"
        android:id="@+id/bttnGreyhounds"
        android:layout_below="@+id/bttnHarness"
        android:layout_alignLeft="@+id/bttnHarness"
        android:layout_alignStart="@+id/bttnHarness"
        android:layout_marginTop="29dp"
        android:onClick="listGreyhounds" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Thoroughbreds"
        android:id="@+id/bttnThoroughbreds"
        android:layout_above="@+id/bttnHarness"
        android:layout_alignLeft="@+id/bttnHarness"
        android:layout_alignStart="@+id/bttnHarness"
        android:layout_marginBottom="30dp"
        android:nestedScrollingEnabled="true"
        android:onClick="listThoroughbreds" />

</RelativeLayout>
