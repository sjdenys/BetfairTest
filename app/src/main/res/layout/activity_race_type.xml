<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@color/betfair_yellow"
    android:clickable="false"
    android:id="@+id/rlRaceType" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Harness"
        android:id="@+id/bttnHarness"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="listHarness"
        android:background="@android:drawable/btn_default"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Greyhounds"
        android:id="@+id/bttnGreyhounds"
        android:layout_below="@+id/bttnHarness"
        android:layout_alignLeft="@+id/bttnHarness"
        android:layout_alignStart="@+id/bttnHarness"
        android:layout_alignRight="@+id/bttnHarness"
        android:layout_alignEnd="@+id/bttnHarness"
        android:layout_marginTop="30dp"
        android:onClick="listGreyhounds"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Thoroughbreds"
        android:id="@+id/bttnThoroughbreds"
        android:layout_above="@+id/bttnHarness"
        android:layout_alignLeft="@+id/bttnHarness"
        android:layout_alignStart="@+id/bttnHarness"
        android:layout_alignRight="@+id/bttnHarness"
        android:layout_alignEnd="@+id/bttnHarness"
        android:layout_marginBottom="30dp"
        android:onClick="listThoroughbreds"
        android:background="@android:drawable/btn_default"/>

</RelativeLayout>
