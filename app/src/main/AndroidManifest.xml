<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sjden.betfairtest" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".RaceTypeActivity"
            android:label="@string/title_activity_race_type" >
        </activity>
        <activity
            android:name=".VenuesActivity"
            android:label="@string/title_activity_venue_list" >
        </activity>
        <activity android:name=".SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RacesActivity"
            android:label="@string/title_activity_races" >
        </activity>
        <activity
            android:name=".RunnersActivity"
            android:label="@string/title_activity_runners" >
        </activity>
        <activity
            android:name=".StakeActivity"
            android:label="@string/title_activity_stake" >
        </activity>
        <activity
            android:name=".BetSuccessActivity"
            android:label="@string/title_activity_bet_success" >
        </activity>
    </application>

</manifest>
